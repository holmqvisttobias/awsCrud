"""
class ReadFlatFiles:
    def __init__(self, fAccessKeyId, fSecretAccessKey, fRegionName):
        self.__fAccessKeyId     = fAccessKeyId
        self.__fSecretAccessKey = fSecretAccessKey
        self.__fRegionName      = fRegionName

        if (verbose):
